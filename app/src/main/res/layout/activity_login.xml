<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cream_paper1">

    <TextView
        android:id="@+id/login_TV_lets_write_together"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="20dp"
        android:layout_alignParentStart="true"
        android:text="@string/lets_write_together"
        android:textColor="@color/black"
        android:textSize="70sp"
        android:fontFamily="@font/oleo_script_bold">
    </TextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_BTN_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        app:cornerRadius="0dp"
        android:text="@string/login"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:backgroundTint="@color/dark_cream"
        android:fontFamily="@font/courgette_regular"
        />

</RelativeLayout>