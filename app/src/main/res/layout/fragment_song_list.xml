<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@color/baby_blue">

    <EditText
        android:id="@+id/songList_EText_search"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:hint="@string/search"
        android:textColorHint="@color/black"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:maxLines="1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/songList_BTN_search"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:icon="@drawable/icon_search"
        app:iconGravity="end"
        android:backgroundTint="@color/deep_pale_sky_blue"
        />
    <ListView
        android:id="@+id/songList_ListView_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/songList_EText_search"
        android:layout_marginTop="10dp"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:divider="@color/deep_pale_sky_blue"
        android:dividerHeight="2dp"/>
</RelativeLayout>